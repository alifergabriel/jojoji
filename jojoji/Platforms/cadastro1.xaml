<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jojoji.cadastro1"
             BackgroundColor="Black">

    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20" BackgroundColor="White" CornerRadius="10" BorderColor="Red" BorderWidth="2">
            <Label Text="cadastro" HorizontalOptions="Center" Margin="0,10,0,20" />

            <Entry Placeholder="login" BackgroundColor="White" Margin="0,10,0,0" />
            <Entry Placeholder="senha" BackgroundColor="White" Margin="0,10,0,0" IsPassword="True" />
            <Entry Placeholder="confirmar senha" BackgroundColor="White" Margin="0,10,0,0" IsPassword="True" />

            <Button Text="entrar" VerticalOptions="End" HorizontalOptions="Center" Margin="0,20,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
