<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jojoji.entregadeproduto"
             Title="Entrega de Produto">
    <VerticalStackLayout Spacing="20" Padding="20">
        <Label Text="Entrega de Produto"
               FontSize="Large"
               TextColor="White" />

        <Button Text="Endereço"
                BackgroundColor="Black"
                TextColor="White"
                BorderColor="Red"
                BorderWidth="2" />
        <Button Text="Método de Entrega"
                BackgroundColor="Black"
                TextColor="White"
                BorderColor="Red"
                BorderWidth="2" />
        <Button Text="Pagamento"
                BackgroundColor="Black"
                TextColor="White"
                BorderColor="Red"
                BorderWidth="2" />
        <Button Text="Revisar Pedido"
                BackgroundColor="Black"
                TextColor="White"
                BorderColor="Red"
                BorderWidth="2" />
    </VerticalStackLayout>
</ContentPage>
