<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jojoji.Acessorios"
             Title="Acessórios">

    <Grid BackgroundColor="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Text="Acessórios"
               FontSize="Large"
               TextColor="White"
               HorizontalTextAlignment="Center"
               Grid.Row="0" />

        <ScrollView Grid.Row="1">
            <StackLayout Spacing="10">
                <Button Text="Cinto de couro"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        BorderColor="Red"
                        BorderWidth="2" />
                <Button Text="Relógio de pulso"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        BorderColor="Red"
                        BorderWidth="2"
                         />
                <Button Text="Óculos de sol"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        BorderColor="Red"
                        BorderWidth="2" />
                <Button Text="Boné ou chapéu"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        BorderColor="Red"
                        BorderWidth="2" />
            </StackLayout>
        </ScrollView>

        <Button Text="Selecionar"
                BackgroundColor="Red"
                TextColor="White"
                CornerRadius="5"
                HorizontalOptions="Center"
                Grid.Row="2" />

        <Button Text="&#x003c;"
                BackgroundColor="Transparent"
                TextColor="White"
                BorderColor="Red"
                BorderWidth="2"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                Grid.Row="2" />
        <Button Text=">"
                BackgroundColor="Transparent"
                TextColor="White"
                BorderColor="Red"
                BorderWidth="2"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Grid.Row="2" />
    </Grid>
</ContentPage>
