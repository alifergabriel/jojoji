<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jojoji.entrega"
             Title="Método de Entrega">
    <VerticalStackLayout Spacing="10" Padding="20" BackgroundColor="Black">
        <Label Text="Método de Entrega"
               FontSize="Large"
               TextColor="White" />

        <Button Text="Entrega Padrão"
                BackgroundColor="Transparent"
                TextColor="White"
                BorderColor="Red"
                BorderWidth="2" />
        <Label Text="$12,99 + frete (depende do local da entrega)"
               TextColor="White"
               FontSize="Small" />

        <Button Text="Expressa"
                BackgroundColor="Transparent"
                TextColor="White"
                BorderColor="Red"
                BorderWidth="2" />
        <Label Text="$12,99 + frete (depende do local da entrega)"
               TextColor="White"
               FontSize="Small" />

        <Button Text="Selecionar"
                BackgroundColor="Red"
                TextColor="White"
                CornerRadius="5" />
    </VerticalStackLayout>
</ContentPage>
