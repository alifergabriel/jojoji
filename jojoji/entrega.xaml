<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jojoji.Views.entrega"
             Title="entrega"
             BackgroundColor="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Text="Método de Entrega"
               TextColor="White"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               Grid.Row="0" />

        <StackLayout Grid.Row="1" Spacing="20">
            <Button Text="Entrega padrão"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="10" />
            <Button Text="Expressa"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="10" />
            <Button Text="Retirada na loja"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="10" />
            <Button Text="Correios"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="10" />
        </StackLayout>
    </Grid>
</ContentPage>
