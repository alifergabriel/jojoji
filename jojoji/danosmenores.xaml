<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jojoji.Views.danosmenores"
             Title="danosmenores">
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Text="ID do Item"
               Grid.Row="0" />
        <Entry Grid.Row="1" />

        <Label Text="Descrição"
               Grid.Row="2" />
        <Entry Grid.Row="3" />

        <Label Text="Status do Item"
               Grid.Row="4" />
        <Entry Grid.Row="5" />

        <Button Text="Registrar Reparo"
                Grid.Row="6"
                HorizontalOptions="Center" />
    </Grid>
</ContentPage>
