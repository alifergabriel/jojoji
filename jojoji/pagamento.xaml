<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jojoji.Pagamento"
             Title="Pagamento">
    <ScrollView>
        <StackLayout Spacing="10">
            <Entry x:Name="EmailEntry" Placeholder="Email" />
            <Entry x:Name="NumeroCartaoEntry" Placeholder="Número do cartão" Keyboard="Numeric" />
            <Entry Placeholder="Data de validade (MM/AA)" Keyboard="Numeric" />
            <Entry Placeholder="Código de segurança (CVV)" Keyboard="Numeric" />
            <Entry Placeholder="Senha" IsPassword="True" />
            <Entry Placeholder="Valor total" Keyboard="Numeric" />
            <Button x:Name="ProsseguirButton" Text="Prosseguir" Clicked="OnProsseguirButtonClicked" BackgroundColor="Green" TextColor="White" />
        </StackLayout>
    </ScrollView>
</ContentPage>
