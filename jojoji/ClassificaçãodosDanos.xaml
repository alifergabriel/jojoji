<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jojoji.Views.ClassificacaoDanosPage"
             Title="ClassificaçãodosDanos">
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Text="Descrição dos danos:"
               Grid.Row="0" />
        <Entry Grid.Row="1" />

        <StackLayout Grid.Row="2" Spacing="20">
            <Button Text="Danos Menores" />
            <Button Text="Danos Maiores" />
            <Button Text="Danos Irreparáveis" />
        </StackLayout>
    </Grid>
</ContentPage>
