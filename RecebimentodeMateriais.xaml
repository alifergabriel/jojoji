<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jojoji.RecebimentodeMateriais.Views.RecebimentoPage"
             Title="Recebimento de Materiais">
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Text="ID do Item"
               Grid.Row="0" />
        <Entry Grid.Row="1" />

        <Label Text="Descrição"
               Grid.Row="2" />
        <Entry Grid.Row="3" />

        <Label Text="Data de Recebimento"
               Grid.Row="4" />
        <DatePicker Grid.Row="5" />

        <Label Text="Quantidade"
               Grid.Row="6" />
        <Entry Grid.Row="7" />

        <Label Text="Fornecedor"
               Grid.Row="8" />
        <Entry Grid.Row="9" />

        <Label Text="Nota Fiscal"
               Grid.Row="10" />
        <Entry Grid.Row="11" />

        <Button Text="Continuar"
                Grid.Row="12"
                HorizontalOptions="Center" />
    </Grid>
</ContentPage>
