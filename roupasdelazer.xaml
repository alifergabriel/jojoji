<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jojoji.Views.roupaslazer"
             Title="Roupas de Lazer"
             BackgroundColor="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Text="Roupas de Lazer"
               TextColor="White"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               Grid.Row="0" />

        <StackLayout Grid.Row="1" Spacing="20">
            <Button Text="Camisetas gráficas"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="10" />
            <Button Text="Bermudas cargo"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="10" />
            <Button Text="Chinelos"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="10" />
        </StackLayout>

        <Button Text="← selecionar"
                TextColor="White"
                Grid.Row="2"
                HorizontalTextAlignment="Start" />
    </Grid>
</ContentPage>
