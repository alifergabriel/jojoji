<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jojoji.pedido2.Views.FinalizacaoPedidoPage"
             Title="Finalização de Pedido">
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Text="ID da Finalização"
               Grid.Row="0" />
        <Entry Grid.Row="1" />

        <Label Text="Descrição da Finalização"
               Grid.Row="2" />
        <Entry Grid.Row="3" />

        <Label Text="Data da Finalização"
               Grid.Row="4" />
        <DatePicker Grid.Row="5" />

        <Label Text="Quantidade Finalizada"
               Grid.Row="6" />
        <Entry Grid.Row="7" />

        <Label Text="Notas Adicionais"
               Grid.Row="8" />
        <Entry Grid.Row="9" />

        <Label Text="Status da Finalização"
               Grid.Row="10" />
        <Entry Grid.Row="11" />

        <Button Text="Continuar"
                Grid.Row="12"
                HorizontalOptions="Center" />
    </Grid>
</ContentPage>
